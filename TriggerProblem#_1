//write a trigger in salesforce for When ever a case is created with origin as email then set status as new and Priority as Medium.

trigger CaseTrigger on Case (before insert) {
    
    if(Trigger.isBefore && Trigger.isInsert) {
        
        CaseTriggerHandler.setDefaultsForEmailCases(Trigger.new);
    }

}



public class CaseTriggerHandler {
    
    public static void setDefaultsForEmailCases(List<Case> newCases) {
        
        for(case c: newCases) {
            
            if(c.origin!=null && c.origin.equalsIgnorecase('Email')){
                
                c.Status = 'New';
                c.Priority = 'Medium';
            }
        }
    }
    
   
    }

